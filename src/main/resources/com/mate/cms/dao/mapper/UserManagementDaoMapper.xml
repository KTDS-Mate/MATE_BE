  	<!-- 바보 -->
  	<select id="selectWaitingGuideUsers"
  			resultType="com.mate.cms.userManagement.vo.UserManagementVO">
  		SELECT USR_ID
		 	 , USR_LGN_ID
		 	 , GD_RGST_DT
		 	 , USR_FNM
		 	 , USR_LNM
		 	 , USR_GNDR
		 	 , USR_BD
		 	 , USR_EML
		 	 , USR_IS_GD
		 	 , GD_APPL_STT
		 	 , USR_IS_CL
		 	 , USR_IS_BLCK
		 	 , USR_SLF_INTDCTN
		 	 , GD_PRFL_IMG
		 	 , GD_ID_IMG
		 	 , GD_CBC_IMG
		 	 , USR_GD_EXP
		  FROM USR_INF
		 WHERE GD_APPL_STT = 'WAITING'
  	</select>
  	
  	<select id="selectWaitingGuideUsersCount"
  			resultType="_int">
  		SELECT COUNT(1)
		  FROM USR_INF
		 WHERE GD_APPL_STT = 'WAITING'
  	</select>
  	
